<%- include('partials/header'); -%>
<%- include('partials/nav'); -%>

<div class="recipes_container container-fluid-mobile">
    
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Główna</a></li>
          <li class="breadcrumb-item active" aria-current="page">Wyszukaj</li>
        </ol>
    </nav>

    <div class="recipes">
    <% if(found != "") { %>
    <% found.forEach(recipe => { %>
        <div class="card">
            <a href="/recipes/<%= recipe.category %>/<%= recipe._id %>">
                <img src="\imgs\<%= recipe.image %>" class="card-img-top" alt="<%= recipe.image %>">
                <div class="card-body">
                        <h4><%= recipe.title %></h4>
                        <p class="card-text">
                            <span><%= recipe.category %></span>
                            <span><%= recipe.time %> min</span>
                            <span>1 &#10084;</span>
                        </p>
                </div>
            </a>
        </div>
        <% }); %> 
        <% } else { %>
            <p>Nie znaleziono :(</p>
        <% } %>
    </div>
    
</div>

<%- include('partials/footer'); -%>